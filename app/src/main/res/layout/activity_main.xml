<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".actividades.MainActivity">

    <ScrollView
        android:id="@+id/Main_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/Main_Relative__background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_hub">

            <ImageView
                android:id="@+id/Main_Relative__logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hub_logosvg_1"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/Main_Relative__Textview_Bienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:text="BIEN\nVE\nNI\nDO"
                android:textStyle="bold"
                android:textSize="50dp"
                android:textColor="@color/black"
                android:gravity="end"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Main_Relative__logo"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/blob_haikei_2" />

            <ImageView
                android:id="@+id/Main_Relative__imageview_divisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Main_Relative__logo"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/divisor_acciones_2_1" />

            <TextView
                android:id="@+id/Main_Relative__subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELIJA UNA \n ACCION"
                android:layout_below="@id/Main_Relative__Textview_Bienvenido"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="50dp"
                android:textSize="30dp"
                android:textColor="@color/black"/>



            <Button
                android:id="@+id/Main_Relative__button_deudores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Main_Relative__imageview_divisor"
                android:layout_marginRight="69dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#DEFCFA"
                android:text="PAGOS"
                android:textColor="#2F2E41"
                android:textSize="20dp"
                android:paddingHorizontal="60dp"
                android:paddingVertical="5dp"/>


            <Button
                android:id="@+id/Main_Relative__button_clases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Main_Relative__button_deudores"
                android:layout_alignParentRight="true"
                android:layout_marginRight="69dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="#DEFCFA"
                android:text="CLASES"
                android:textColor="#2F2E41"
                android:textSize="20dp"
                android:paddingHorizontal="60dp"
                android:paddingVertical="5dp"
                />

            <Button
                android:id="@+id/Main_Relative__button_alumnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Main_Relative__button_clases"
                android:layout_marginRight="69dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#DEFCFA"
                android:text="alumnos"
                android:textColor="#2F2E41"
                android:textSize="20dp"
                android:paddingHorizontal="60dp"
                android:paddingVertical="5dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>