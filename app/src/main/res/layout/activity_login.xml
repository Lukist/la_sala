<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.Login"
    android:background="#FCDEE0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_login__logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_login"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/activity_login__tv_ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login__logo"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="55dp"
            android:text="Ingresar"
            android:textSize="32dp"
            android:textColor="@color/texto"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/activity_login__input_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login__tv_ingresar"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/text_field"
            android:hint="Usuario"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:textColor="@color/texto"
            android:textColorHint="@color/texto"
            android:textSize="15dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/activity_login__input_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login__input_usuario"
            android:layout_marginHorizontal="45dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/text_field"
            android:hint="ContraseÃ±a"
            android:letterSpacing="0.05"
            android:padding="15dp"
            android:textColor="@color/texto"
            android:textColorHint="@color/texto"
            android:textSize="15dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/activity_login__btn_iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DEFCFA"
            android:layout_below="@id/activity_login__input_contrasena"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="30dp"
            android:text="Iniciar Sesion"
            android:textColor="@color/texto"
            android:textStyle="bold"/>




    </RelativeLayout>






</ScrollView>