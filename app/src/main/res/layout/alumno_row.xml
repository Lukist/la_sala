<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#00ffffff">

    <RelativeLayout
        android:id="@+id/alumno_row__div_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/list_item_default"
        >

        <ImageView
            android:id="@+id/alumno_row__iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_alumno_check"
            android:layout_marginLeft="13dp"
            android:layout_marginVertical="13dp"/>

        <TextView
            android:id="@+id/alumno_row__tv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/alumno_row__iv_logo"
            android:text="Texto"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="28dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/alumno_row__tv_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alumno_row__tv_nombre"
            android:layout_toRightOf="@id/alumno_row__iv_logo"
            android:text="Apellido"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="28dp"/>





    </RelativeLayout>



</RelativeLayout>